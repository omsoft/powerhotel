<h1>Hotels#index</h1>
 
	<table class="table">
	  <thead>
	    <tr>
	      <th scope="col">Name</th>
	      <th scope="col">Country code</th>
	      <th scope="col">Average price</th>
	      <th scope="col">Views count</th>
	      <th scope="col" colspan="3"></th>
	    </tr>
	  </thead>
	 
	  <tbody>
	    <% @hotels.each do |h| %>
	    <% present(h) do |u| %>
	      <tr>
	        <td><%= u.name %></td>
	        <td><%= u.country_code %></td>
	        <td><%= u.average_price	%></td>
	        <td><%= u.views_count	%></td>
	        <td><%= link_to "Edit", edit_hotel_path(u) %></td>
	        <td><%= link_to "Destroy", u, method: :delete, data: { confirm: "Are you sure?" } %></td>
	      </tr>
	    <% end %>
	    <% end %>
	  </tbody>
	</table>
	 
	<br>
	 
	<%= link_to "New hotel", new_hotel_path, class: "btn btn-success" %>
